<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="meteo.mcipriani.com.buongiorno.meteo" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.buongiorno.mcipriani.meteo.Meteo"
            android:label="@string/app_name" android:theme="@style/Theme.AppCompat.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.buongiorno.mcipriani.meteo.Settings"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.buongiorno.mcipriani.meteo.Meteo">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.buongiorno.mcipriani.meteo.Meteo" />
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
